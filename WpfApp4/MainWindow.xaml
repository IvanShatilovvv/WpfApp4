<Window x:Class="ObjectMovementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Object Movement" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="x" Background="Ivory">
            <Ellipse x:Name="objectToMove" Width="100" Height="100" Fill="Navy" Canvas.Left="350" Canvas.Top="120"/>
        </Canvas>
        <StackPanel Orientation = "Horizontal" HorizontalAlignment = "Center" VerticalAlignment = "Bottom">
            <Button Content = "Влево" Click = "LeftButton_Click" Height = "50" Width="100" Background = "Beige"/>
            <Button Content = "Ввер" Click = "UpButton_Click" Height = "50" Width="100" Background = "Beige"/>
            <Button Content = "Вниз" Click = "DownButton_Click" Height = "50" Width="100" Background = "Beige"/>
            <Button Content = "Вправо" Click = "RightButton_Click" Height = "50" Width="100" Background = "Beige"/>
        </StackPanel>
    </Grid>
</Window>
